{
  "name": "i18next-compose",
  "description": "Compose your i18next instance and bring contributors on the same boat",
  "version": "0.1.4",
  "private": false,
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "preview": "vite preview",
    "test": "vitest"
  },
  "dependencies": {
    "@use-compose/i18next-core": "workspace:*",
    "happy-dom": "18.0.1",
    "i18next": "25.7.1"
  },
  "devDependencies": {
    "typescript": "5.9.2",
    "vite": "7.2.6",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/use-compose/i18next-compose"
  },
  "type": "module",
  "types": "./dist/index.d.ts"
}
