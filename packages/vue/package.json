{
  "name": "i18next-compose-vue",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "build": "run-p type-check \"build-only {@}\" --",
    "build-only": "vite build",
    "dev": "vite",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "test:unit": "vitest",
    "type-check": "vue-tsc --build"
  },
  "dependencies": {
    "i18next": "25.7.1",
    "i18next-compose": "workspace:*",
    "vue": "3.5.18"
  },
  "devDependencies": {
    "@playwright/test": "1.54.1",
    "@tsconfig/node22": "22.0.2",
    "@types/jsdom": "21.1.7",
    "@types/node": "22.16.5",
    "@vitejs/plugin-vue": "6.0.1",
    "@vue/test-utils": "2.4.6",
    "@vue/tsconfig": "0.7.0",
    "jsdom": "26.1.0",
    "npm-run-all2": "8.0.4",
    "typescript": "^5.9.3",
    "unreadable-typescript": "1.0.4",
    "vite": "7.2.6",
    "vite-plugin-dts": "4.5.4",
    "vite-plugin-vue-devtools": "8.0.0",
    "vitest": "3.2.4",
    "vue-tsc": "3.0.4"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/use-compose/i18next-compose"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
