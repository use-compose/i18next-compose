{
  "extends": "../../tsconfig.base.json",
  "include": ["./env.d.ts", "src"],
  "exclude": ["src/**/__tests__/*", "node_modules", "dist"],

  "compilerOptions": {
    // "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
