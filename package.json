{
  "name": "@use-compose/i18next-compose-root",
  "description": "",
  "version": "1.0.0",
  "author": "",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "build-core": "pnpm --filter='./packages/core' build",
    "build-main": "pnpm --filter=i18next-compose build",
    "build-packages": "pnpm build --filter './packages/**'",
    "changeset": "changeset",
    "changeset:publish": "changeset publish",
    "changeset:snapshot": "changeset version --snapshot && changeset publish --tag snapshot",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "dev": "pnpm --filter=nuxt-example dev",
    "dev:build": "pnpm --filter=nuxt-example build",
    "dev:build:vue": "pnpm --filter=i18next-compose-vue build",
    "dev:generate": "pnpm --filter=nuxt-example generate",
    "dev:vue": "pnpm --filter=i18next-compose-vue dev",
    "docs:build": "pnpm --filter docs docs:build",
    "docs:dev": "pnpm --filter docs docs:dev",
    "docs:preview": "pnpm --filter docs docs:preview",
    "format": "prettier --write .",
    "lint": "eslint .",
    "prepare": "husky",
    "preview": "pnpm --filter i18next-compose preview",
    "preview:vue": "pnpm --filter=i18next-compose-vue preview",
    "release": "pnpm build && pnpm changeset:publish",
    "release:snapshot": "pnpm build && pnpm changeset:snapshot",
    "syncpack": "pnpm syncpack:fix && pnpm syncpack:format",
    "syncpack:fix": "syncpack fix --dependency-types prod,dev",
    "syncpack:format": "syncpack format",
    "syncpack:lint": "syncpack lint --dependency-types prod,dev",
    "test": "vitest",
    "typedoc": "typedoc"
  },
  "dependencies": {
    "@eslint/js": "9.20.0",
    "eslint": "9.20.0",
    "eslint-plugin-vue": "10.7.0",
    "globals": "15.15.0",
    "happy-dom": "18.0.1",
    "typescript-eslint": "8.23.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@use-compose/logger": "0.0.6",
    "eslint-config-prettier": "10.1.8",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "syncpack": "14.0.0-alpha.32",
    "typedoc": "0.28.10",
    "typedoc-plugin-markdown": "4.8.1",
    "typedoc-vitepress-theme": "1.1.2",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": "20.19.0 || >=22.12.0",
    "pnpm": ">=9"
  },
  "keywords": [],
  "license": "ISC",
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "main": "index.js"
}
