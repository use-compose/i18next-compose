{
  "entryPoints": [
    "./packages/core/src/index.ts",
    "./packages/i18next-compose/src/index.ts",
    "./packages/vue/src/index.ts"
  ],
  "plugin": ["typedoc-plugin-markdown", "typedoc-vitepress-theme"],
  "out": "./docs/typedoc-api",
  "docsRoot": "./docs",
  "theme": "markdown",
  "readme": "./docs/README.md",
  "indexFormat": "table",
  "useCodeBlocks": true,
  "disableSources": true,
  "sidebar": {
    "autoConfiguration": true,
    "format": "vitepress",
    "pretty": false,
    "collapsed": false
  }
}
